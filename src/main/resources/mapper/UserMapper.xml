<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.catalogue.my_spring_boot_project.modules.user_module.mapper.UserMapper">

    <!-- 结果映射：User 包含 Role 集合 -->
    <resultMap id="UserWithRolesResultMap" type="UserEntity">
        <id column="id" property="id"/>
        <result column="uid" property="uid"/>
        <result column="name" property="name"/>
        <result column="email" property="email"/>
        <result column="password" property="password"/>
        <result column="avatar_url" property="avatarUrl"/>

        <!-- 一对多映射：roles -->
        <collection property="roles" ofType="RoleEntity">
            <id column="role_id" property="id"/>
            <result column="role_name" property="name"/>
        </collection>
    </resultMap>

    <!-- 查询用户及其角色 -->
    <select id="selectUserWithRoles" resultMap="UserWithRolesResultMap">
        SELECT 
            u.id,
            u.uid,
            u.name,
            u.email,
            u.password,
            u.avatar_url,
            r.id AS role_id,
            r.name AS role_name
        FROM user u
        LEFT JOIN user_roles ur ON u.id = ur.user_id
        LEFT JOIN roles r ON ur.role_id = r.id
        WHERE u.email = #{emailOrUid} OR u.uid = #{emailOrUid}
    </select>

</mapper>
